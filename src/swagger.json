{
    "openapi": "3.0.0",
    "info": {
        "title": "Introdução ao SOLID",
        "description": "Exercicio de introdução ao SOLID, documentando a api",
        "version": "1.0.0",
        "contact": {
            "email": "giovanycast@hotmail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "User"
                ],
                "sumary": "Create a user",
                "description": "Create a new user",
                "requestBody": {
                    "content": {
                        "aplication/json": {
                            "schema": {
                                "type": "object",
                                "porperties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "username",
                                    "email": "user@example.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string",
                                                "format": "uuid"
                                            },
                                            "admin": {
                                                "type": "boolean",
                                                "default": "false"
                                            },
                                            "name": {
                                                "type": "string",
                                                "format": "string",
                                                "example": "username"
                                            },
                                            "email": {
                                                "type": "string",
                                                "format": "email"
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Email already exists",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "error": {
                                                "type": "string",
                                                "example": "This email is already taken"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "User"
                ],
                "sumary": "List users",
                "description": "Lista all user ",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user_id",
                        "required": "true",
                        "description": "user id",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ]
            }
        }
    }
}